{
  "name": "pomodoro",
  "private": true,
  "version": "2.8.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/MkMan/pomodoro"
  },
  "scripts": {
    "build": "vite build --base /pomodoro",
    "e2e:open": "concurrently -k -s first \"npm start\" \"cypress open\"",
    "e2e:run": "concurrently -k -s first \"npm start\" \"cypress run\"",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint:check": "eslint ./src && markdownlint .",
    "lint:fix": "eslint ./src --fix && markdownlint . --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "sanity-check": "npm run lint:check && npm run format:check && npm run ts:check && npm test && npm run e2e:run",
    "start": "vite --open --port 3000 --base /pomodoro",
    "test:watch": "vitest watch --coverage",
    "test": "vitest run --coverage",
    "ts:check": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/css": "^11.10.6",
    "@fontsource/raleway": "^4.5.12",
    "solid-icons": "^1.0.4",
    "solid-js": "^1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@solidjs/testing-library": "^0.7.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/user-event": "14.4.3",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "@vitest/coverage-c8": "^0.29.8",
    "concurrently": "8.0.1",
    "cypress": "^12.9.0",
    "eslint": "8.37.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-solid": "^0.12.0",
    "eslint-plugin-testing-library": "5.10.2",
    "gh-pages": "^5.0.0",
    "husky": "8.0.3",
    "identity-obj-proxy": "3.0.0",
    "jsdom": "^21.1.1",
    "lint-staged": "13.2.0",
    "markdownlint": "0.28.1",
    "markdownlint-cli": "0.33.0",
    "prettier": "2.8.7",
    "semantic-release": "21.0.1",
    "typescript": "5.0.3",
    "vite": "4.2.1",
    "vite-plugin-pwa": "^0.14.7",
    "vite-plugin-solid": "^2.7.0",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "0.29.8",
    "wait-on": "^7.0.1",
    "workbox-window": "^6.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md,json,html}": "prettier --write",
    "*.md": "markdownlint --fix"
  }
}
