{
  "name": "pomodoro",
  "private": true,
  "version": "3.7.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MkMan/pomodoro"
  },
  "type": "module",
  "scripts": {
    "build": "vite build --base /pomodoro",
    "e2e:open": "concurrently -k -s first \"npm start\" \"cypress open\"",
    "e2e:run": "concurrently -k -s first \"npm start\" \"cypress run\"",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "lint:check": "eslint --report-unused-disable-directives ./src && biome lint --error-on-warnings . && markdownlint .",
    "lint:fix": "eslint ./src --fix && biome lint --error-on-warnings --write . && markdownlint . --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "sanity-check": "npm run lint:check && npm run format:check && npm run ts:check && npm test && npm run e2e:run",
    "start": "vite --open --port 3000 --base /pomodoro",
    "test:watch": "vitest watch --coverage",
    "test": "vitest run --coverage",
    "ts:check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@fontsource-variable/playpen-sans": "^5.1.0",
    "@fontsource/raleway": "^5.1.0",
    "@thisbeyond/solid-dnd": "^0.7.5",
    "@vanilla-extract/css": "^1.16.0",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@solidjs/testing-library": "^0.8.4",
    "@storybook/addon-essentials": "^7.6.16",
    "@storybook/addon-interactions": "^7.6.16",
    "@storybook/addon-links": "^7.6.16",
    "@storybook/blocks": "^7.6.16",
    "@storybook/builder-vite": "^7.6.16",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "@typescript-eslint/parser": "7.0.1",
    "@vanilla-extract/vite-plugin": "^4.0.17",
    "@vitest/coverage-v8": "^2.1.5",
    "concurrently": "8.2.2",
    "cypress": "^13.5.0",
    "eslint": "8.56.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-solid": "^0.13.1",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "6.2.0",
    "eslint-plugin-vitest": "^0.3.22",
    "gh-pages": "^6.0.0",
    "husky": "8.0.3",
    "identity-obj-proxy": "3.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "15.0.2",
    "markdownlint": "0.31.1",
    "markdownlint-cli": "0.37.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "22.0.7",
    "storybook": "^7.6.16",
    "storybook-solidjs": "^1.0.0-beta.2",
    "storybook-solidjs-vite": "^1.0.0-beta.6",
    "typescript": "5.2.2",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.21.0",
    "vite-plugin-solid": "^2.10.2",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5",
    "wait-on": "^7.1.0",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": "20.15.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": ["eslint --cache --fix", "biome lint --write"],
    "*.{js,ts,tsx,css,md,json,html}": "biome format --write",
    "*.md": "markdownlint --fix"
  }
}
